{
  "compilerOptions": {
    "target": "ES2020",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/src/*"],
      "@types/*": ["./shared/src/types/*"],
      "@utils/*": ["./shared/src/utils/*"]
    }
  },
  "exclude": ["node_modules", "dist", "build"]
}
